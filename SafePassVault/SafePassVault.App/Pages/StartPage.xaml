<Page
    x:Class="SafePassVault.App.Pages.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SafePassVault.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="StartPage"
    mc:Ignorable="d">

    <Grid
        Width="750"
        Height="500"
        Background="{StaticResource PrimaryGray}">
        <TextBlock
            Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#dddddd">
            <Run Text="SAFEPASSvault" />
            <Run Foreground="{StaticResource PrimaryOrange}" Text="v0.3" />
        </TextBlock>
    </Grid>
</Page>
