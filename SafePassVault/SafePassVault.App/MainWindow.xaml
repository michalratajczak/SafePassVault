<Window
    x:Class="SafePassVault.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SafePassVault.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="SAFEPASSvault"
    Style="{StaticResource BaseWindowStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Width="250">
            <Image RenderOptions.BitmapScalingMode="HighQuality" Source="Resources/Img/logo.png" />

        </DockPanel>
        <Frame Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
