<Window
    x:Class="SafePassVault.App.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SafePassVault.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="SAFEPASSvault"
    Style="{StaticResource BaseWindowStyle}"
    mc:Ignorable="d">
    <Grid Width="400" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            Width="300"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="Resources/Img/logo.png" />
        <TextBox
            x:Name="LoginBox"
            Grid.Row="1"
            Margin="20,10"
            md:HintAssist.Hint="Login"
            Style="{StaticResource Sp_MaterialDesignFilledTextFieldTextBox}" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="2"
            Margin="20,10"
            md:HintAssist.Hint="Password"
            Style="{StaticResource Sp_MaterialDesignFilledPasswordFieldPasswordBox}" />
        <Button
            x:Name="LoginButton"
            Grid.Row="3"
            Margin="10"
            HorizontalAlignment="Center"
            Click="LoginButton_Click"
            Content="Login"
            IsDefault="True" />
    </Grid>
</Window>
